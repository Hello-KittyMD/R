}

CLT.prec.mean <- function(k,delta,simuls.ww){
  return(mean(sapply(1:nrow(simuls.ww[[k]]),CLT.prec.line,delta=delta,simuls.ww=simuls.ww,N=as.numeric(names(simuls.ww)[[k]]))))
